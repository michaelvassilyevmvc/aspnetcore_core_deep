@using DepartsCrud.Models

@model Department

<!DOCTYPE html>

<html>
<head>
    <title>Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
</head>
<body>
<div class="container">
    <h3>Department</h3>
    <form action="/departments/edit" method="post">
        <input type="hidden" name="Id" value="@Model.Id"/>
        <div class="row mb-3">
            <div class="col-2">
                <label class="col-form-label">Name</label>
            </div>
            <div class="col-6">
                <input class="form-control" type="text" name="Name" value="@Model.Name"/>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-2">
                <label class="col-form-label">Description</label>
            </div>
            <div class="col-6">
                <input class="form-control" type="text" name="Description" value="@Model.Description"/>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-2">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
            <div class="col-6">
            </div>
        </div>
    </form>
    <div class="row mb-3">
        <div class="col-2">
            <form method="post" action="/departments/delete/@Model.Id">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
        <div class="col-6">
        </div>
    </div>
</div>
</body>
</html>
@model List<Department>

@{
    Layout = "_Layout";
    ViewBag.Title = "Departments";
}


<h1>Department</h1>
@if (Model is not null && Model.Count > 0)
{
    <table class="table table-striped">
        <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @await Html.PartialAsync("_DepartmentList", Model, ViewData)
        </tbody>
    </table>
}
<br/>
<a href="/departments/create" class="btn btn-primary">Add</a>

